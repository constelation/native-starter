{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "jsx": "react",
        "outDir": "build",
        "rootDir": "app",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "stores/*": [
                "app/stores/*"
            ],
            "shared/*": [
                "app/shared/*"
            ],
            // this magic enables our universal components to see the correct platform-specific types
            "*": [
                "node_modules/*/index.native",
                "node_modules/*/index.ios",
                "node_modules/*/index.android",
                "*"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "allowJs": true,
        "sourceMap": true
    },
    "filesGlob": [
        "app/**/*.ts",
        "app/**/*.tsx"
    ],
    "exclude": [
        "index.android.js",
        "index.ios.js",
        "build",
        "node_modules",
        "__tests__"
    ],
    "compileOnSave": false
}